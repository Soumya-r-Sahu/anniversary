        android:shortcutDisabledMessage="@string/gallery_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.anniversary.anniversary_flutter"
            android:targetClass="com.anniversary.anniversary_flutter.MainActivity"
            android:data="anniversary://gallery" />
