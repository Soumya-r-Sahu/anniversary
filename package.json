{
  "name": "anniversary-website",
  "version": "2.0.0",
  "description": "A beautiful, optimized anniversary website with modern performance features",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",    "lint": "eslint src --ext .js --config config/eslint.json",
    "lint:fix": "eslint src --ext .js --fix --config config/eslint.json",
    "format": "prettier --write \"src/**/*.{js,css,html}\" --config config/prettier.json",
    "analyze": "vite-bundle-analyzer",
    "optimize": "npm run lint:fix && npm run format && npm run build",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist"
  },
  "keywords": [
    "anniversary",
    "love",
    "website",
    "romantic",
    "modern",
    "performance"
  ],
  "author": "Love Story Developers",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-bundle-analyzer": "^0.7.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.1.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "gh-pages": "^6.1.0",
    "rollup-plugin-visualizer": "^5.9.2"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
